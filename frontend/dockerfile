FROM node:16

WORKDIR /usr/app

RUN npm install --global pm2

COPY ./package*.json ./

RUN npm install --production
RUN npm install

COPY ./ ./

RUN npm run build

# FROM nginx:stable-alpine as production-stage
# COPY  ./nginx/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 3000

USER node

CMD [ "pm2-runtime", "start", "npm", "--", "start", "daemon off;", "nginx", "-g"]
