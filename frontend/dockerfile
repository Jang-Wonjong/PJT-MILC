FROM node:16

WORKDIR /app

COPY package*.json /app/

RUN npm install

COPY ./ /app/

RUN npm run build

RUN npm install pm2 -g

Run pm2 --name front start npm -- start

FROM nginx:stable-alpine as production-stage
COPY  ./nginx/nginx.conf /etc/nginx/conf.d/default.conf

CMD ["daemon off;", "nginx", "-g"]
